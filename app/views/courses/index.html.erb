<div class="container">
  <div class="row" style="padding:20px;">
    <div class="col-md-4 pull-right">
        <div class="panel">
            <div class="panel-heading bg-blue font-white">
              <h4>Courses</h4>
            </div>
            <div class="panel-body">

            </div>
        </div>
    </div>
  <% @courses.each do |course| %>
    <div class="col-md-8">
        <div class="panel">
            <div class="panel-body">

                <h3 class="font-1"><%= course.title %></h3>
                <p class="font-3"><%= course.description %></p>
                <%= link_to 'Show', course %>
                <%= link_to 'Edit', edit_course_path(course) %>
                <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>

            <br>

            <%= link_to 'New Course', new_course_path %>
            </div>
        </div>
    </div>
<% end %>

</div>
